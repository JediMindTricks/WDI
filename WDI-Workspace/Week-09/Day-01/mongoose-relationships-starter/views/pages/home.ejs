<div class="jumbotron">
  <div class="text-center col-md-8 col-md-offset-2">
    <h1 class="text-info"><span class="fa fa-lock"></span>Playlist Monkey</h1>
    <h2 class="text-muted">A place to share your favorite playlists.</h2>
    <hr>
    <% if(loggedIn) { %>
      <a href="/profile" class="btn btn-lg btn-info">Share A Playlist</a>
      <a href="/users" class="btn btn-lg btn-warning">Browse Playlists</a>
    <% } else { %>
      <a href="/login" class="btn btn-lg btn-info">Login</a>
      <a href="/signup" class="btn btn-lg btn-warning">Signup</a>
    <% } %>
  </div>
</div>
